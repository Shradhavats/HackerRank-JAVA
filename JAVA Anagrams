static boolean isAnagram(String a, String b) {
        
        
         char c[]=a.toLowerCase().toCharArray();
         char d[]=b.toLowerCase().toCharArray();
         if(c.length!=d.length){
            return(false);
         }
         else{
         java.util.Arrays.sort(c);
         java.util.Arrays.sort(d);
         for(int i=0;i<c.length;i++){
            if(c[i]!=d[i]){
                return(false);
            }
         }
        return(true);
         }
    }

